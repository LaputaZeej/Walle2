<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    >

    <TextView
        android:background="#f00"
        android:id="@+id/tv_pid"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black_mozi"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_level"
        app:layout_constraintTop_toTopOf="@id/tv_time" />

    <TextView
        android:background="#00f"
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black_mozi"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/tv_output"
        app:layout_constraintLeft_toRightOf="@id/tv_pid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:background="#f0f"
        android:id="@+id/tv_tag"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black_mozi"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_level"
        app:layout_constraintTop_toTopOf="@id/tv_output" />

    <TextView
        android:background="#fcc"
        android:id="@+id/tv_level"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="center|top"
        android:singleLine="true"
        android:text="I"
        android:textColor="@color/black_mozi"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_output"
        app:layout_constraintLeft_toRightOf="@id/tv_tag"
        app:layout_constraintRight_toLeftOf="@id/tv_output"
        />

    <TextView
        android:id="@+id/tv_output"
        android:background="#f98"
        android:layout_width="0dp"
        android:minHeight="20dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black_mozi"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_level"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>